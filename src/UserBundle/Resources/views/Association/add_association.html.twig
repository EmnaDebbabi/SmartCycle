{% extends "@User/Default/index.html.twig" %}
{% block slide %}
    <div class="inner_page-banner one-img">
    </div>
    <div class="using-border py-3">
        <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
                <li>
                    <a href="{{ path('user_homepage') }}">Index</a>
                    <span>/</span>
                </li>
                <li>Ajouter une association</li>
            </ul>
        </div>
    </div>

{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Cre√©r une association !</h3>
        <div class="contact-list-grid">
            <form action="#" method="post">
                <div class=" agile-wls-contact-mid">
                    <div class="form-group contact-forms">
                        {{ form_widget(form.nomAssociation,{'attr':{'class':'form-control','placeholder':"Saisir le nom d'association" }}) }}
                        {{ form_errors(form.nomAssociation) }}
                    </div>
                    <div class="form-group contact-forms">
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>
                    <div class="form-group contact-forms">
                        {{ form_widget(form.adresse,{'attr':{'class':'form-control','placeholder':"Saisir l'adresse" }}) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                    <div class="form-group contact-forms">

                        {#{{ form_widget(form.capital,{'attr':{'class':'form-control','placeholder':"Saisir le capital" }}) }}#}

                        <input type="number" name="capital" id="cpt" required="required" placeholder="capital">


                    </div>


                    <button type="submit" id="bt" class="btn btn-block sent-butnn" onclick="if(document.getElementById('cpt').value<0){alert('hello no negatives');return false;}" >Ajouter</button>

                </div>
            </form>
            {{ form_end(form) }}
        </div>

    </div>
