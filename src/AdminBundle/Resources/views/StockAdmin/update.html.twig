{% extends "@Admin/Default/index.html.twig" %}

{% block body %}


    {{ form_start(form) }}
    <div class="col-md-6 validation-grids widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Stock à ajouter :</h4>
        </div>
        <div class="form-body">
            <form data-toggle="validator" novalidate="true">

                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Quantité</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">
                        <input type="number" name="quantitedispo" id="q" value="{{ stock.quantitedispo }}">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Description</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">


                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Prix unitaire</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">
                        <input type="number" name="prixuni" id ="p" value="{{ stock.prixuni }}">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Image</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">

                        <button type="submit" class="btn btn-default">Ajouter</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    {{ form_end(form) }}


    <div>
        {% for flashMessage in app.session.flashbag.get('notice') %}

            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>

        {% endfor %}
    </div>

    {% for label, messages in app.flashes(['warning', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}





{% endblock%}