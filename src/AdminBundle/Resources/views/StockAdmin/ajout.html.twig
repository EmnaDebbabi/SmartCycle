{% extends "@Admin/Default/index.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    <div class="col-md-6 validation-grids widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Stock à ajouter :</h4>
        </div>
        <div class="form-body">
            <form data-toggle="validator" novalidate="true">

    <script src="{{ asset('js/images/jquery-1.11.1min.js') }}"></script>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Description</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">


                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12" >
                        <label>Quantité</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12" >
                        {#{{ form_widget(form.quantitedispo) }}#}
                        {#{{ form_errors(form.quantitedispo) }}#}
                        <input type="number" name="quantitedispo" id="q">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Prix unitaire</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">
                        {#{{ form_widget(form.prixuni) }}#}
                        {#{{ form_errors(form.prixuni) }}#}
                        <input type="number" name="prixuni" id ="p">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Image</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">
                        {{ form_widget(form.file) }}
                        {{ form_errors(form.file) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">

                        <button type="submit" class="btn btn-default" onclick="if(document.getElementById('p').value<0 || document.getElementById('q').value<0){alert('vous ne devez pas mettre un nombre négatif');return false}">Ajouter</button>
                    </div>
                </div>

            </form>
        </div>
    </div>


    {{ form_end(form) }}





{% endblock %}