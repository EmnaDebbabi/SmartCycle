{% extends "@Admin/Default/index.html.twig" %}

{% block body %}


    <div class="bs-example widget-shadow" data-example-id="contextual-table">
        <h3> Liste de Topics :</h3>
        <table class="table">
            <thead>
            <tr >
                <th>Nom du sujet</th>
                <th>Contenu</th>
                <th>Refuser</th>
                <th>approuver</th>
            </tr>
            </thead>
            <tbody>
            {% set i =0 %}
            {% for s in topics  %}
                {% if i % 2 == 1 %}
                    {% set i=i+1 %}
                    <tr class="info">

                        <th >{{ s.topicTitle }}</th>
                        <th >{{ s.topicSubject|raw }}</th>
                        <td ><a href="{{ path('refuser',{'topicId':s.topicId}) }}" onclick="return confirm('Etes vous sur de supprimer cet produit?')"><i width="100px" class="fa fa-trash-o"></i></a></td>
                        <td><a href="{{ path('approuver',{'topicId':s.topicId}) }}" onclick="return confirm('Etes vous sur de modifier cet produit?')"><i class="fa fa-pencil-square-o"></i></a></td>
                    </tr>
                {% else %}
                    {% set i=i+1 %}
                    <tr class="success">

                        <th >{{ s.topicTitle }}</th>
                        <th >{{ s.topicSubject|raw }}</th>
                        <td ><a href="{{ path('refuser',{'topicId':s.topicId}) }}" onclick="return confirm('Etes vous sur de supprimer cet produit?')"><i width="100px" class="fa fa-trash-o"></i></a></td>
                        <td><a href="{{ path('approuver',{'topicId':s.topicId}) }}" onclick="return confirm('Etes vous sur de modifier cet produit?')"><i class="fa fa-pencil-square-o"></i></a></td>
                    </tr>
                {% endif %}
            {% endfor %}
            <tr>

            </tbody>
        </table>
    </div>




{% endblock %}
