{% extends "@Admin/Default/index.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    <div class="col-md-6 validation-grids widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4>Catégorie à modifier :</h4>
        </div>
        <div class="form-body">
            <form data-toggle="validator" novalidate="true">

                <script src="{{ asset('js/images/jquery-1.11.1min.js') }}"></script>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Categorie Name</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">


                        {{ form_widget(form.catName) }}
                        {{ form_errors(form.catName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">
                        <label>Description de la categorie</label>
                    </div>
                    <div class="col-md-9 col-lg-9 col-sm-12">
                        {{ form_widget(form.catDescription) }}
                        {{ form_errors(form.catDescription) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-sm-12">

                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>

            </form>
        </div>
    </div>


    {{ form_end(form) }}





{% endblock %}